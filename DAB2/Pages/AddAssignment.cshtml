@page
@model AddAssignmentModel
@{
    ViewData["Title"] = "Add assignment";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to add new assignment.</p>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Create a new assignment.</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Assignment.Name"></label>
                <input asp-for="Assignment.Name" class="form-control" placeholder="I4-DAB" />
                <span asp-validation-for="Assignment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.DueDate"></label>
                <input asp-for="Assignment.DueDate" class="form-control" placeholder="01/01-2019" />
                <span asp-validation-for="Assignment.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.GroupSize"></label>
                <input asp-for="Assignment.GroupSize" class="form-control" placeholder="1" />
                <span asp-validation-for="Assignment.GroupSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.courseid"></label>
                <input asp-for="Input.courseid" class="form-control" placeholder="1" />
                <span asp-validation-for="Input.courseid" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}