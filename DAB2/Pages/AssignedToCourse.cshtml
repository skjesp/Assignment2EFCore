@page
@model DAB2.Pages.AssignedToCourseModel
@{
    ViewData["Title"] = "Assigned To Course";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Create a new course.</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="input.CourseID"></label>
                <input asp-for="input.CourseID" class="form-control" placeholder="1" />
                <span asp-validation-for="input.CourseID" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<h5>Teachers in course</h5>
<table>
    <tr>
        <th>TeacherId</th>
        <th>Teacher</th>
        <th>IsAssistant</th>
    </tr>

    @foreach (var course in @Model.Teachers)
    {
        <tr>
            <td>@course.TeacherId</td>
            <td>@course.Teacher</td>
            <td>@course.IsAssistant</td>
        </tr>
    }
</table>