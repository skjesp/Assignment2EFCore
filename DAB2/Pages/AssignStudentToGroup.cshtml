@page
@model AssignStudenToGroupModel
@{
    ViewData["Title"] = "Assign student to group";
}

<h3>@ViewData["Title"]</h3>


<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Select a student and a group and assign.</h5>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.studentId"></label>
                <select asp-for="Input.studentId" asp-items="Model.listStudents" class="form-control"></select>
                <span asp-validation-for="Input.studentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.groupId"></label>
                <select asp-for="Input.groupId" asp-items="Model.listGroups" class="form-control"></select>
                <span asp-validation-for="Input.groupId" class="text-danger"></span>
            </div>
            
                <button type="submit" class="btn btn-primary">Assign</button>
            <br/>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}