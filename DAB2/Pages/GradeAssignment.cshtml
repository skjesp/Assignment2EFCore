@page
@model GradeAssignmentModel
@{
    ViewData["Title"] = "Grade assignment";
}

<h3>@ViewData["Title"]</h3>


<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Grade an assignment</h5>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="GroupAssignment.GroupId"></label>
                <select asp-for="GroupAssignment.GroupId" asp-items="Model.listGroups" class="form-control"></select>
                <span asp-validation-for="GroupAssignment.GroupId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GroupAssignment.AssignmentId"></label>
                <select asp-for="GroupAssignment.AssignmentId" asp-items="Model.listAssignments" class="form-control"></select>
                <span asp-validation-for="GroupAssignment.AssignmentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GroupAssignment.Grade"></label>
                <select asp-for="GroupAssignment.Grade" asp-items="Model.listGrades" class="form-control"></select>
                <span asp-validation-for="GroupAssignment.Grade" class="text-danger"></span>
            </div>
                <button type="submit" class="btn btn-primary">Assign grade</button>
            <br/>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}