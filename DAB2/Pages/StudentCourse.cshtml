@page
@model StudentCourseModel
@{
    ViewData["Title"] = "Student courses";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Search courese for student by student auId.</h5>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.searchString" class="form-control" placeholder="au123456"/>
                <span asp-validation-for="Input.searchString" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>

<br/>

<h5>Students within course</h5>
<table>
    <tr>
        <th>StudentAuId</th>
        <th>CourseName</th>
        <th>Coursed passed</th>
        <th>Course active</th>
        <td>Grade</td>
    </tr>

    @foreach (var CourseStudent in @Model.CourseStudents)
    {
        <tr>
            <td>@CourseStudent.StudentAuId</td>
            <td>@CourseStudent.CourseName</td>
            <td>@CourseStudent.IsCoursePassed</td>
            <td>@CourseStudent.IsCourseActive</td>
            <td>@CourseStudent.Grade</td>
        </tr>
    }
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}