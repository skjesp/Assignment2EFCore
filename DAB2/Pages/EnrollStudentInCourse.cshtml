@page
@model EnrollStudentInCourseModel
@{
    ViewData["Title"] = "Enroll Student In Course";
}

<h1>Use this page to enroll students in courses.</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Create a new student.</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Student Au-id</label>
                <input asp-for="CourseStudent.StudentID" class="form-control" placeholder="123456" />
                <span asp-validation-for="CourseStudent.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Course id</label>
                <input asp-for="CourseStudent.CourseID" class="form-control" placeholder="123456" />
                <span asp-validation-for="CourseStudent.CourseID" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>