@page
@model AddTeacherModel
@{
    ViewData["Title"] = "Add Teacher";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to add new teachers.</p>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Create a new teacher.</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Teacher.AuId"></label>
                <input asp-for="Teacher.AuId" class="form-control" placeholder="123456"/>
                <span asp-validation-for="Teacher.AuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Birthday"></label>
                <input asp-for="Teacher.Birthday" class="form-control" placeholder="1980"/>
                <span asp-validation-for="Teacher.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Name"></label>
                <input asp-for="Teacher.Name" class="form-control" placeholder="Jens Jensen"/>
                <span asp-validation-for="Teacher.Name" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}